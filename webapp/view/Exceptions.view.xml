<mvc:View
	controllerName="ypf.zparamfreegd0.controller.Exceptions"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <headerContent>
            <Button
                id="addButton"
                icon="sap-icon://add"
                type="Transparent"
                text="{i18n>list.button.add}"
                visible="{=!${viewModel>/editMode}}"
                press="onAdd"                          
            />   
            <Button
                id="editButton"
                icon="sap-icon://edit"
                type="Transparent"
                text="{i18n>list.button.edit}"
                visible="{=!${viewModel>/editMode}}"
                press="onEdit"                          
            />
            <Button
                id="saveButton"
                icon="sap-icon://save"
                type="Transparent"
                text="{i18n>list.button.save}"                        
                visible="{viewModel>/editMode}"
                press="onSave"
            />
            <Button
                id="deleteButton"
                icon="sap-icon://delete"
                type="Transparent"
                text="{i18n>list.button.delete}"
                visible="{viewModel>/editMode}"   
                press="onDelete"                     
            />
            <Button
                id="cancelButton"
                icon="sap-icon://decline"
                type="Transparent"
                text="{i18n>list.button.cancel}"          
                visible="{viewModel>/editMode}"
                press="onCancel"              
            />
		</headerContent>
        <Table id="idExceptionsTable"
            inset="false"
            items="{
                path: '/ExceptionsSet'
            }">
            <headerToolbar>
                <OverflowToolbar id="tableOverflowToolbar">
                    <content>
                        <Title id="tableTitle" text="{i18n>list.table.title}" level="H2"/>
                        <ToolbarSpacer id="tableTitleSpacer" />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column id="columnId1">
                    <Text id="columnTitle1" text="{i18n>list.table.programColumn.title}" />
                </Column>
                <Column id="columnId2"
                    demandPopin="true"
                    hAlign="Center">
                    <Text id="columnTitle2" text="{i18n>list.table.objectColumn.title}" />
                </Column>
                <Column id="columnId3"
                    demandPopin="true"
                    hAlign="Center">
                    <Text id="columnTitle3" text="{i18n>list.table.numberColumn.title}" />
                </Column>
                <Column id="columnId4"
                    minScreenWidth="Desktop"
                    demandPopin="true"
                    width="25%">
                    <Text id="columnTitle4" text="{i18n>list.table.valueColumn.title}" />
                </Column>          
                <Column id="columnId5"
                    minScreenWidth="Desktop"
                    width="25%">
                    <Text id="columnTitle5" text="{i18n>list.table.descriptionColumn.title}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="tableColumnItems">
                    <cells>
                        <ObjectIdentifier
                            id="tableItems1"
                            title="{Program}"/>
                        <ObjectIdentifier
                            id="tableItems2"
                            title="{Object}"/>
                        <ObjectNumber
                            id="tableItems3"
                            number="{Number}"/>
                        <Input
                            id="tableItems4"
                            value="{Value}"
                            placeholder="{i18n>list.table.valueColumn.ph}"
                            editable="{viewModel>/editMode}"/>               
                        <TextArea
                            id="tableItems5"
                            value="{Description}"
                            placeholder="{i18n>list.table.descriptionColumn.ph}"
                            editable="{viewModel>/editMode}"
                            width="100%" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
