<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
    <Dialog id="dialogEquipo" contentWidth="30%" busyIndicatorDelay="0" title="{i18n>dialog.title}" icon="sap-icon://sys-add">
        		<l:Grid defaultSpan="L12 M12 S12" width="auto" id="idGrid">
			<l:content>
            <f:Form id="idFormCreacion" editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout id="idGridLayout"
                        labelSpanXL="4"
                        labelSpanL="3"
                        labelSpanM="4"
                        labelSpanS="12"
                        emptySpanXL="0"
                        emptySpanL="4"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer id="idFormContainer" >
                        <f:formElements>
                            <f:FormElement id="idFormElement1" label="{i18n>dialog.label.program}">
                                <f:fields>
                                    <Input
                                        required="true"
                                        id="idDialogProgram"
                                        placeholder="{i18n>dialog.ph.program}"
                                        value="{Program}"/> 
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement id="idFormElement2" label="{i18n>dialog.label.object}">
                                <f:fields>
                                    <Input
                                        id="idDialogObject"
                                        placeholder="{i18n>dialog.ph.object}"
                                        value="{Object}"
                                        required="true"/> 
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement id="idFormElement3" label="{i18n>dialog.label.number}">
                                <f:fields>
                                    <Input
                                        id="idDialogNumber"
                                        type="Number"
                                        required="true"
                                        placeholder="{i18n>dialog.ph.number}"
                                        value="{path:'Number', type:'sap.ui.model.type.Integer'}"/> 
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement id="idFormElement4" label="{i18n>dialog.label.value}">
                                <f:fields>
                                    <Input
                                        id="idDialogValue"
                                        placeholder="{i18n>dialog.ph.value}"
                                        value="{Value}"/> 
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement id="idFormElement5" label="{i18n>dialog.label.description}">
                                <f:fields>
                                    <TextArea
                                        id="idDialogDescription"
                                        value="{Description}"
                                        placeholder="{i18n>dialog.ph.description}"
                                        width="100%" />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
			</l:content>
		</l:Grid>
        <buttons>
			<Button id="idAcceptButton" text="Aceptar" press="onCrearExcepcion" type="Accept"/>
            <Button id="idCancelButton" text="Cancelar" press="onDialogClose" type="Reject"/> 
		</buttons>
    </Dialog>
</core:FragmentDefinition>